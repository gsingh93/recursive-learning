{
    "manifest_version": 2,

    "name": "Recursive Learning",
    "version": "0.1",

    "permissions": [
        "tabs", "http://*/*"
    ],

    "browser_action": {
        "default_popup": "popup.html"
    },

    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*", "file:///*"],
            "js": ["content.js"]
        }
    ]
}
